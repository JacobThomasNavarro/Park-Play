<style>
    /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
    #map {
        height: 400px;
        width: 400px;
        margin: 20px;
    }
    /* Optional: Makes the sample page fill the window. */
    html, body {
        height: 100%;
        margin: 20px;
        padding: 10px;
    }
</style>
    <div id="map"></div>
<script>
      var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: @Model.lat, lng: @Model.lng},
            zoom: 8
        });
        var marker = new google.maps.Marker({
            position: {
                lat: @Model.lat,
                lng: @Model.lng
            },
            map: map
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=@APIKeys.GeoCode&callback=initMap"
